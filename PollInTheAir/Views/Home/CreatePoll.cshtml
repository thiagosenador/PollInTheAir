@model PollInTheAir.Domain.Models.Poll

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>

    <script>
        $(function () {
            $('#datepicker').datepicker();
        });
    </script>

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Content/datepicker.css" />

    <title>Poll in the air</title>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Create poll</h1>
        </div>

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="form-group col-xs-8">
                    @Html.LabelFor(m => m.Title)
                    @Html.TextBoxFor(m => m.Title, htmlAttributes: new { @class = "form-control col-xs-4" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-xs-2">
                    <label for="datepicker">expires at</label>
                    <div>
                        <input type="text" class="span2 form-control" id="datepicker">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-xs-2 btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        add question <span class="caret" />
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">single choice</a></li>
                        <li>@Html.ActionLink("multiple choices", "CreateMultipleChoicesQuestion")</li>
                        <li><a href="#">free text</a></li>
                    </ul>
                </div>
            </div>
        }
    </div>
</body>
</html>
