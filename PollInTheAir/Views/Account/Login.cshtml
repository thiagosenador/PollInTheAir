@using PollInTheAir.Web.ViewModel

@model SignInSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @Styles.Render("~/Content/css")

    <title>@Resources.Resources.appTitle</title>
</head>

<body id="loginBody">
    <div id="home_icon">
        <a href="@Url.Action("Home", "Home")">
            <span class="glyphicon glyphicon-home" aria-hidden="true" id="home_button"></span>
        </a>
    </div>

    <div class="container container-table col-md-3 col-md-offset-7">
        <div class="row vertical-center-row">
            <div class="well">
                @using (Html.BeginForm("Login", "Account"))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationMessage("LOGIN_FAILED", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            </span>
                            @Html.TextBoxFor(m => m.LoginViewModel.Email, new { @class = "form-control" })
                        </div>
                        <p class="text-danger">@Html.ValidationMessageFor(m => m.LoginViewModel.Email)</p>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                            </span>
                            @Html.PasswordFor(m => m.LoginViewModel.Password, new { @class = "form-control" })
                        </div>
                        <p class="help-block">@Html.ValidationMessageFor(m => m.LoginViewModel.Password)</p>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.LoginViewModel.RememberMe)
                                @Html.DisplayNameFor(m => m.LoginViewModel.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="log in" class="btn btn-primary" id="loginButton" />
                    </div>

                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }

                @Html.Partial("_ExternalLoginsListPartial")
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>