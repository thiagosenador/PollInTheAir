@using PollInTheAir.Web.ViewModel

@model SignInSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/home_style.css")
    @Styles.Render("~/Content/zocial.css")

    <title>Poll in the air</title>
</head>

<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Account"))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.LoginViewModel.Email)
                @Html.TextBoxFor(m => m.LoginViewModel.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LoginViewModel.Email)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LoginViewModel.Password)
                @Html.PasswordFor(m => m.LoginViewModel.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LoginViewModel.Password)
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.LoginViewModel.RememberMe)
                    @Html.LabelFor(m => m.LoginViewModel.RememberMe)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>

            @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
        }

        @Html.Partial("_ExternalLoginsListPartial")
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>