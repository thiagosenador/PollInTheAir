@model IEnumerable<PollInTheAir.Domain.Models.Poll>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="~/Content/bootstrap.css" />

    <title>Poll in the air</title>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Available polls</h1>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>name</th>
                    <th>expires at</th>
                    <th>actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var poll in Model)
                {
                    <tr>
                        <td>@poll.Name</td>
                        <td>@poll.ExpirationDate</td>
                        <td>@Html.ActionLink("view", "ViewPollResults", "PollResults", new { pollId = @poll.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
