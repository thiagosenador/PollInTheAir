@model IEnumerable<PollInTheAir.Domain.Models.Poll>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PAGETITLE {
    @Resources.Resources.availablePolls
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Resources.Resources.name</th>
            <th>@Resources.Resources.expirationDate</th>
            <th>@Resources.Resources.createdBy</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var poll in Model)
        {
            <tr>
                <td>@Html.ActionLink(poll.Name, "AnswerPoll", "PollAnswer", new { pollId = @poll.Id }, null)</td>
                <td>@poll.ExpirationDate</td>
                <td>@poll.User.UserName</td>
            </tr>
        }
    </tbody>
</table>