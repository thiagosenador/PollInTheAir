@using PollInTheAir.Domain.Models

@model PollInTheAir.Web.ViewModel.AnswerPollViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />

    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <meta name="viewport" content="width=device-width" />

    <title>Poll in the air</title>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>@Model.Poll.Name</h1>
        </div>

        <div>
            @Model.CurrentQuestion.Statement
        </div>

        @if (@Model.CurrentQuestion.GetType() == typeof(MultipleChoicesQuestion))
        {
            @Html.Partial("AnswerMultipleChoicesQuestionView", (MultipleChoicesQuestion)@Model.CurrentQuestion)
        }

        @if (@Model.CurrentQuestion.GetType() == typeof(Question))
        {
            @Html.Partial("AnswerFreeTextQuestionView", @Model.CurrentQuestion)
        }
    </div>
</body>
</html>