@model PollInTheAir.Domain.Models.Poll

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>

    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>

    <link rel="stylesheet" href="~/Content/bootstrap.css"/>

    <script>
        $(function() {
            $("#sortable").sortable();
            $("#sortable").disableSelection();
        });
    </script>

    <title>Poll in the air</title>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Review your poll</h1>
        </div>

        <h1><small>@Html.LabelFor(m => m.Name)</small>@Model.Name</h1>

        <h1><small>@Html.LabelFor(m => m.ExpirationDate)</small>@Model.ExpirationDate</h1>

        <h3>@Html.LabelFor(m => m.Questions)</h3>

        <div id="sortable" class="list-group" style="border-top: 1px solid transparent;">
            @foreach (var question in Model.Questions)
            {
                <a href="#" class="list-group-item">@question.Statement</a>
            }
        </div>

        @Html.ActionLink("publish poll", "PublishPoll", "PollCreation", null, new { @class = "btn btn-default" })
    </div>
</body>
</html>
