@using PollInTheAir.Domain.Models

@model Question

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section SCRIPTS {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/intheair.validation.js"></script>
}

@section PAGETITLE {
    Create free text question
}

@using (Html.BeginForm("CreateFreeTextQuestion", "PollCreation"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Statement)
        @Html.TextBoxFor(m => m.Statement, new { @class = "form-control", @maxlength = "128" })
        @Html.ValidationMessageFor(m => m.Statement)
    </div>

    @Html.Partial("PollCreation/_CreateQuestionsButtonGroup", true)
}