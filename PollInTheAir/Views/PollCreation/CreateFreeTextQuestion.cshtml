@using PollInTheAir.Domain.Models

@model Question

@using (Html.BeginForm("CreateFreeTextQuestion", "PollCreation"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Statement, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Statement, new { @class = "form-control", @maxlength = "128" })
        <p class="help-block">@Html.ValidationMessageFor(m => m.Statement)</p>
    </div>

    @Html.Partial("PollCreation/_CreateQuestionsButtonGroup", true)
}

@section PAGETITLE {
    @Resources.Resources.createFreeText
}

@section SCRIPTS {
    @Scripts.Render("~/bundles/jqueryval")
}